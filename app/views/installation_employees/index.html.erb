<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.installation_employees') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
    <thead>
    <tr>
      <th scope="col"><%= t('g.kit_installation_number')%></th>
      <th scope="col"><%= t('g.employee')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installation_employees.each do |installation_employee| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= installation_employee.kit_installation.tube_kit.kit_number %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= installation_employee.employee.full_name %></td>
        <td><%= link_to t('g.show'), installation_employee, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, TubeKit  %></td>
        <td><%= link_to t('g.edit'), edit_installation_employee_path(installation_employee), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, TubeKit  %></td>
        <td><%= link_to t('g.destroy'), installation_employee, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, TubeKit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @installation_employees %>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_installation_employee_path, style: 'color: #efefef', align:'right' if can? :create, TubeKit %>
</li>
</ul>
<br>
