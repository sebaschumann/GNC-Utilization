<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.tube_verifications') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
  <th scope="col"><%= t('g.tube')%></th>
      <th scope="col"><%= t('g.exam_type')%></th>
      <th scope="col"><%= t('g.enabled')%></th>
        <th scope="col"><%= t('g.date')%></th>
        <th scope="col"><%= t('g.technician')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tube_verifications.each do |tube_verification| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_verification.tube.id_diameter_capacity %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_verification.exam_type.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_verification.enabled %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_verification.date %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_verification.technician.full_name %></td>
        <td><%= link_to t('g.show'), tube_verification,  class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, Tube  %></td>
        <td><%= link_to t('g.edit'), edit_tube_verification_path(tube_verification) , class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, Tube  %></td>
        <td><%= link_to t('g.destroy'), tube_verification, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Tube %></td
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tube_verifications%>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_tube_verification_path, style: 'color: #efefef', align:'right' if can? :create, Tube %>
</li>
</ul>
<br>
