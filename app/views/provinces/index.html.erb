<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.provinces') %></h1>

<form method="d-flex" action="/provinces">
<h4> <%= t('g.search') %> </h4>
 <input class="form-control me-2" placeholder=<%= t('g.provinces') %> aria-label="Search"type="text" name="filter" />
<br>
<button class="btn btn-primary" type="submit">Search</button>
<br>

<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.name') %></th>
      <th scope="col"><%= t('g.country') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= province.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= province.country.name %></td>
        <td><%= link_to t('g.show'), province, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, Locality%></td>
        <td><%= link_to t('g.edit'), edit_province_path(province), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, Locality%></td>
        <td><%= link_to t('g.destroy'), province, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Locality %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @provinces %>
<br>


<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right" >
    <%= link_to t('g.add'), new_province_path, style: 'color: #efefef', align:'right' if can? :create, Locality %>
  </li>
  </ul>
  <br>
