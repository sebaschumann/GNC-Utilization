<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.service_stations') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.name') %></th>
      <th scope="col"><%= t('g.fuel_types') %></th>
      <th scope="col"><%= t('g.flag')%></th>
      <th scope="col"><%= t('g.dispensers_quantity')%></th>
      <th scope="col"><%= t('g.adress')%></th>
      <th scope="col"><%= t('g.locality')%></th>
      <th scope="col"><%= t('g.province')%></th>
      <th scope="col"><%= t('g.country')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_stations.each do |service_station| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= service_station.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= service_station.types_fuel %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= service_station.flagg %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= service_station.dispensers_quantity %></td>
          <td style="font-family: sans-serif; font-size:70%; "><%= service_station.adress %></td>
        <td style="font-family: sans-serif; font-size:70%; "d><%= service_station.locality.name %></td>
          <td style="font-family: sans-serif; font-size:70%; "><%= service_station.locality.province.name %></td>
          <td style="font-family: sans-serif; font-size:70%; "><%= service_station.locality.province.country.name %></td>
        <td><%= link_to t('g.show'), service_station, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, GncCharge %></td>
        <td><%= link_to t('g.edit'), edit_service_station_path(service_station), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, GncCharge %></td>
        <td><%= link_to t('g.destroy'), service_station, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, GncCharge  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @service_stations %>
<br>


<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right" >
    <%= link_to t('g.add'), new_service_station_path, style: 'color: #efefef', align:'right' if can? :create, GncCharge%>
  </li>
  </ul>
