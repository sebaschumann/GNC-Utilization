<p id="notice"><%= notice %></p>


<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.cars') %></h1>




<form method="d-flex" action="/cars">
<h4> <%= t('g.search') %> </h4>
 <input class="form-control me-2" placeholder=<%= t('g.license') %> aria-label="Search"type="text" name="filter" />
 <br>
<button class="btn btn-primary" type="submit">Search</button>
<br>
<br>

  </form>



<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.brand') %></th>
        <th scope="col"><%= t('g.model') %></th>
        <th>Version</th>
        <th scope="col"><%= t('g.license') %></th>
        <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%=  car.version.model.brand.brand %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= car.version.model.model  %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= car.version.version %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= car.license %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= car.color %></td>
        <td><%= link_to t('g.show'), car, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, Car %></td>
        <td><%= link_to t('g.edit'), edit_car_path(car), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, Car %></td>
        <td><%= link_to t('g.destroy'), car,  class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Car %></td>
      </tr>

    <% end %>
  </tbody>
</table>
<%= paginate @cars %>
<br>
<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
<li class="btn btn-success" align="right" >
<%= link_to t('g.add'), new_car_path, style: 'color: #efefef', align:'right' if can? :create, Car %>
</li>
</ul>


