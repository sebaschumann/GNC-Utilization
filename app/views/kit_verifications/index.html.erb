<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.kit_verifications') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.year')%></th>
      <th scope="col"><%= t('g.enabled')%></th>
     <th scope="col"><%= t('g.tube_kit')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kit_verifications.each do |kit_verification| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= kit_verification.year %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= kit_verification.enabled %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= kit_verification.tube_kit.kit_number %></td>
        <td><%= link_to t('g.show'), kit_verification, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, TubeKit  %></td>
        <td><%= link_to t('g.edit'), edit_kit_verification_path(kit_verification), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, TubeKit  %></td>
        <td><%= link_to t('g.destroy'), kit_verification, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, TubeKit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @kit_verifications %>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_kit_verification_path, style: 'color: #efefef', align:'right' if can? :create, TubeKit %>
</li>
</ul>
<br>
