<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.workshops') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.name')%></th>
      <th scope="col"><%= t('g.address')%></th>
      <th scope="col"><%= t('g.locality')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= workshop.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= workshop.address %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= workshop.locality.locality_province_country %></td>
        <td><%= link_to t('g.show'), workshop, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, TubeKit  %></td>
        <td><%= link_to t('g.edit'), edit_workshop_path(workshop), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, TubeKit  %></td>
        <td><%= link_to t('g.destroy'), workshop, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, TubeKit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @workshops %>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_workshop_path, style: 'color: #efefef', align:'right' if can? :create, TubeKit %>
</li>
</ul>
<br>
