<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.tube_kits') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.kit_number')%></th>
      <th scope="col"><%= t('g.tube')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tube_kits.each do |tube_kit| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_kit.kit_number %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube_kit.tube.id_diameter_capacity %></td>
      
        <td><%= link_to t('g.show'), tube_kit, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, TubeKit  %></td>
        <td><%= link_to t('g.edit'), edit_tube_kit_path(tube_kit), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, TubeKit  %></td>
        <td><%= link_to t('g.destroy'), tube_kit, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, TubeKit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tube_kits %>
<br>


<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_tube_kit_path, style: 'color: #efefef', align:'right' if can? :create, TubeKit %>
</li>
</ul>
<br>
