<p id="notice"><%= notice %></p>

<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.gnc_charges') %></h1>


<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('g.charge_moment') %></th>
      <th scope="col"><%= t('g.cost_on_argentinian_pesos') %></th>
      <th scope="col"><%= t('g.license') %></th>
      <th scope="col"><%= t('g.car') %></th>
      <th scope="col"><%= t('g.client') %></th>
      <th scope="col"><%= t('g.service_station') %></th>
      <th scope="col"><%= t('g.locality') %></th>
      <th scope="col"><%= t('g.province') %></th>
      <th scope="col"><%= t('g.country') %></th>
      <th scope="col"><%= t('g.weather') %></th>
      <th scope="col"><%= t('g.celcius_temperature') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gnc_charges.each do |gnc_charge| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.charge_moment %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.cost_on_argentinian_pesos %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.car.license %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.car.car_version_model_brand %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.client.full_name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.service_station.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.service_station.locality.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.service_station.locality.province.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.service_station.locality.province.country.name %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.weather %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= gnc_charge.celsius_temperature %></td>

        <td><%= link_to t('g.show'), gnc_charge, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, GncCharge  %></td>
        <td><%= link_to t('g.edit'), edit_gnc_charge_path(gnc_charge), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, GncCharge  %></td>
        <td><%= link_to t('g.destroy'), gnc_charge, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, GncCharge %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @gnc_charges %>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_gnc_charge_path, style: 'color: #efefef', align:'right' if can? :create, GncCharge %>
</li>
</ul>
<br>
