<p id="notice"><%= notice %></p>


<h1 style="background-color:powderblue; color:blue; font-family:verdanas; text-align:center; "><%= t('g.tubes') %></h1>

<font size="5" face="Courier New" >
<table class="table table-striped">
  <thead>
    <tr>
    <th scope="col"><%= t('g.diameter_on_milimeters')%></th>
      <th scope="col"><%= t('g.capacity_on_liters') %></th>
      <th scope="col"><%= t('g.expiration_date') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @tubes.each do |tube| %>
      <tr>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube.diameter_on_milimeters %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube.capacity_on_liters %></td>
        <td style="font-family: sans-serif; font-size:70%; "><%= tube.expiration_date %></td>
        <td><%= link_to t('g.show'), tube, class:'btn btn-info', style: 'color: #01033D; font-family:cursive;' if can? :show, Tube  %></td>
        <td><%= link_to t('g.edit'), edit_tube_path(tube), class:'btn btn-warning', style: 'color: #000000', style: 'font-family:cursive' if can? :edit, Tube  %></td>
        <td><%= link_to t('g.destroy'), tube, class:'btn btn-danger', style: 'color: #FFFFFF; font-family:cursive;', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Tube %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tubes %>
<br>

<ul class="navbar navbar-expand-xl navbar-dark bg-dark">
  <li class="btn btn-success" align="right">
<%= link_to t('g.add'), new_tube_path, style: 'color: #efefef', align:'right' if can? :create, Tube %>
</li>
</ul>
<br>
